@{
    ViewData["Title"] = "Home Page";
}

<h1>Müşteri Bilgileri</h1>
<p><strong>ID:</strong> @Model.Customer.Id</p>
<p><strong>Adı:</strong> @Model.Customer.FirstName</p>
<p><strong>Soyadı:</strong> @Model.Customer.LastName</p>
<p><strong>E-posta:</strong> @Model.Customer.Email</p>

<h2>Siparişler</h2>
<table border="1">
    <thead>
        <tr>
            <th>Sipariş ID</th>
            <th>Ürün Adı</th>
            <th>Fiyat</th>
            <th>Miktar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.ProductName</td>
                <td>@order.Price.ToString("C")</td>
                <td>@order.Quantity</td>
            </tr>
        }
    </tbody>
</table>